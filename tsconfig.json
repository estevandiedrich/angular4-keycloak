{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module":"es2015",
    "moduleResolution": "node",
    "paths":{
      "@angular/core":["node_modules/@angular/core"],
      "rxjs/*":["node_modules/rxjs/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap":true,
    "inlineSources": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "angularCompilerOptions":{
    "strictMetadataEmit": true,
    "skipMetadataEmit":true
  }
}
